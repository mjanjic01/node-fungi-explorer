extends ../layouts/application.pug
block content


  .row.justify-content-center
    .col-md-6
      form(action="/observation/new" method="post" enctype="multipart/form-data")
        input(type="hidden" name="_csrf" value=csrfToken)

        .form-group
          label(for="fungi") Gljiva
          select#fungi.form-control(name="fungi" required)
            each fungus in fungi
              option(value=fungus.id)= fungus.fullLatinName()

        .form-group
          label(for="date") Datum opažanja
          input#date.form-control(type="date" name="date")

        .form-group
          label(for="description") Napomena
          textarea#description.form-control(rows="3" name="description")

        .form-group
          label(for="image") Odaberi fotografiju
          input#image.js-image-input.form-control(type="file" name="image" accept="image/*" required)
          div.js-image-preview.image-preview

        .form-group
          label Lokacija opažanja
          input.js-observation-lon(name="longitude" hidden required="false")
          input.js-observation-lat(name="latitude" hidden required="false")
          .js-observation-map(style="width: 400px; height: 300px;")


        button.btn.btn-primary(type="submit") Dodaj

