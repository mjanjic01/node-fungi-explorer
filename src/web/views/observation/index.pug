extends /layouts/application.pug
block content

  .table-responsive
    table.table.table-striped.table-hover
      thead
        tr
          th(scope="col") Slika
          th(scope="col") Gljiva
          th(scope="col") Opis
          th(scope="col") Datum
      tbody
        each observation in observations
          tr
            td
              if observation.image
                img(src=observation.image width="100px")

            td= observation.fungi.name || observation.fungi.fullLatinName
            td= observation.description
            td= observation.date

